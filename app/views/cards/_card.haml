%li.card
  - if local_assigns.include? :file_path
    = link_to file_path do
      = image_tag "cards/#{image_file_name}", class: "card-img"
      .card-name= name
      %p.card-desc.text= desc
  - else
    = image_tag "cards/#{image_file_name}", class: "card-img"
    .card-name= name
    %p.card-desc.text= desc
